{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet build src",
            "type": "shell",
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "release build",
            "command": "dotnet build src -c Release;rm bin/GameHelper.pdb",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "zip build",
            "command": "C:/Program Files/7-Zip/7z.exe",
            "args": [
                "a",
                "${workspaceFolder}/GameHelper.zip",
                "${workspaceFolder}/Audio",
                "${workspaceFolder}/Graphics",
                "${workspaceFolder}/Loenn",
                "${workspaceFolder}/bin",
                "${workspaceFolder}/everest.yaml"
            ],
            "type": "process",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "reveal": "silent"
            }
        },
        {
            "label": "public zip build",
            "command": "C:/Program Files/7-Zip/7z.exe",
            "args": [
                "a",
                "${workspaceFolder}/GameHelper-semipublic.zip",
                "${workspaceFolder}/Audio",
                "${workspaceFolder}/Graphics",
                "${workspaceFolder}/Loenn",
                "${workspaceFolder}/bin",
                "${workspaceFolder}/everest.yaml"
            ],
            "type": "process",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "reveal": "silent"
            }
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/GameHelper.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/src/GameHelper.sln"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}
